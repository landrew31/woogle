# parse server

sudo add-apt-repository ppa:chris-lea/redis-server
sudo apt-get update
sudo apt-get install git python-pip python-dev build-essential redis-server checkinstall libreadline-gplv2-dev libncursesw5-dev libssl-dev libsqlite3-dev tk-dev libgdbm-dev libc6-dev libbz2-dev parallel
sudo service redis-server stop
sudo pip install --upgrade pip 
cd /usr/src
sudo wget https://www.python.org/ftp/python/2.7.10/Python-2.7.10.tgz
sudo tar xzf Python-2.7.10.tgz
cd Python-2.7.10
sudo ./configure
sudo make altinstall
cd
git clone https://github.com/landrew31/woogle.git
cd woogle
git checkout multiple_servers
sudo pip install virtualenv
virtualenv -p /usr/local/bin/python2.7 venv
source venv/bin/activate
sudo chown -R ubuntu venv/
pip install -r requirements.txt

parallel -j 3 -- python app.py

### compresed

sudo add-apt-repository ppa:chris-lea/redis-server && sudo apt-get update && sudo apt-get install git python-pip python-dev build-essential redis-server checkinstall libreadline-gplv2-dev libncursesw5-dev libssl-dev libsqlite3-dev tk-dev libgdbm-dev libc6-dev libbz2-dev parallel && sudo service redis-server stop && sudo pip install --upgrade pip && cd /usr/src && sudo wget https://www.python.org/ftp/python/2.7.10/Python-2.7.10.tgz && sudo tar xzf Python-2.7.10.tgz && cd Python-2.7.10 && sudo ./configure && sudo make altinstall


cd && git clone https://github.com/landrew31/woogle.git && cd woogle && git checkout multiple_servers && sudo pip install virtualenv && virtualenv -p /usr/local/bin/python2.7 venv && source venv/bin/activate && sudo chown -R ubuntu venv/ && pip install -r requirements.txt




# redis cluster setings

sudo add-apt-repository ppa:chris-lea/redis-server
sudo apt-get update
sudo apt-get install redis-server
sudo vi  /etc/redis/redis.conf
# #bind 127.0.0.1
# tcp-keepalive 60
sudo service redis-server restart

# elastic cluster settings

sudo apt-get update
sudo apt-get install openjdk-7-jre
sudo wget https://download.elastic.co/elasticsearch/release/org/elasticsearch/distribution/deb/elasticsearch/2.3.1/elasticsearch-2.3.1.deb
sudo dpkg -i elasticsearch-2.3.1.deb
sudo chown ubuntu -R  /etc/elasticsearch/
vi /etc/elasticsearch/elasticsearch.yml
# network.host: 172.31.134.222 
sudo service elasticsearch start
